@model Proje.Models.IndexViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Delicious Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,300i,400,400i,600,600i,700,700i|Satisfy|Comic+Neue:300,300i,400,400i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <section id="menu" class="menu">
        <div class="container">
            <div class="section-title">
                <h2><span>THE COORNER</span></h2>
        
            </div>


            <div class="row mb-3">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="menu-flters">
                        <a asp-controller="Home" asp-action="Index">ev</a>
                        @foreach (var baslik in Model.Kategoris)
                        {
                            <a class=" " href="#@baslik.KategoriAdi">@baslik.KategoriAdi</a>
                        }
                    </ul>
                </div>
            </div>



            @foreach (var ktg in Model.Kategoris)
            {
            

                <div class="section-title">
                    <h2 id="@ktg.KategoriAdi">@ktg.KategoriAdi</h2>
                </div>
                <div class="row menu-container" style="position: relative;">
                    @foreach (var item in ktg.Uruns)
                    {
                        <div class="col-lg-6 menu-item ">
                            <div class="menu-content">
                                <a>@item.UrunAdi</a><span>@item.UrunFiyat ₺</span>
                            </div>
                            <div class="menu-ingredients">
                                @item.UrunAciklama
                            </div>
                        </div>
                    }

                </div>
            }
        </div>
    </section>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
</body>
</html>